<div class="w-full">
  <div class="font-bold text-6xl text-center w-full">
    Welcome to Rails
  </div>

  <div class="mt-10">
    <div class="text-2xl w-full">
      The following projects exist:
    </div>
    <ul class="list-disc">
      <% @projects.each do |project| %>
        <li class="text-xl mt-4">
          <div class="underline text-blue-500">
            <%= link_to project.name, project_path(project) %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
